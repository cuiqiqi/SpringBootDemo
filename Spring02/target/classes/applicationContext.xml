<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns:context="http://www.springframework.org/schema/context"
    xsi:schemaLocation="
    http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.0.xsd">
    
    <!-- 在初始化时调用初始化方法init-method,在销毁时调用销毁方法destroy-method -->
		<!-- 若不指定初始化和销毁方法，执行默认的初始化和销毁方法 -->
    <bean id="beanlife" name="com.example.bean.BeanLife" init-method="start" destroy-method="end">
    </bean>
    
  <bean id="user" name="com.example.bean.User">
  	<property name="name" value="wangxiaomimg"></property>
  	<property name="age" value="24"></property>
  	<property name="gender" value="nan"></property>
  </bean>
  

</beans>